menu "NAT Test Firmware"

menu "Firmware versioning"

config NAT_TEST_VERSION
	string "The version of the NAT Test Firmware"
	default "0.0.0-development"

endmenu # Firmware versioning

config NAT_TEST_MAX_LTE_RECONNECT_ATTEMPTS
	int "Maxmimum attempts to reconnect when LTE link not maintained"
	default 5

config NAT_TEST_RESET_WHEN_UNABLE_TO_CONNECT
	bool "Reset device when all attemps to reconnect to lte network have been exhausted"

endmenu # NAT Test Firmware

menu "Zephyr Kernel"
source "$ZEPHYR_BASE/Kconfig.zephyr"
endmenu

module = NAT_TEST
module-str = NAT Test Firmware
